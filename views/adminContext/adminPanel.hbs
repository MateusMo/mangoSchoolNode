<!DOCTYPE html>
<html lang="en">
<main class="flex-shrink-0">
    <!-- Page content-->
    <section class="py-5">
        <div class="container px-5">
            <!-- Contact form-->
            <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                <div class="text-center mb-5">
                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i>
                    </div>
                    <h1 class="fw-bolder">Panel</h1>
                    <p class="lead fw-normal text-muted mb-0">Welcome back teacher</p>
                        {{> message message=message}}
                </div>
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-8 col-xl-6">
                        <div id="adminOptions">
                            <div class="form-floating mb-3">
                                <button class="btn btn-primary btn-lg w-100" id="newUserButton"
                                    href="/userForm">New User</button>
                            </div>
                            <div class="form-floating mb-3">
                                <button class="btn btn-primary btn-lg w-100" id="newGradeButton"
                                    href="/newGradeForm">New Grade</button>
                            </div>
                            <div class="form-floating mb-3">
                                <button class="btn btn-primary btn-lg w-100" id="adminGrades"
                                    href="/adminGrades">Grades</button>
                            </div>
                            <div class="form-floating mb-3">
                                <button class="btn btn-primary btn-lg w-100" id="submitButton"
                                    href="">Contact Messages</button>
                            </div>
                            <div class="form-floating mb-3">
                                <button class="btn btn-primary btn-lg w-100" id="submitButton"
                                    href="">Logout</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
</body>

</html>

<script>
    const newUserButton = document.getElementById("newUserButton");
    const newGradeButton = document.getElementById("newGradeButton")
    const adminGrades = document.getElementById("adminGrades");

    newUserButton.addEventListener("click", function() {
        window.location.href = "/userForm";
    });

    newGradeButton.addEventListener("click",()=>{
        window.location.href = "/newGradeForm";
    })

    adminGrades.addEventListener("click",()=>{
        window.location.href = "/grade";
    });
</script>