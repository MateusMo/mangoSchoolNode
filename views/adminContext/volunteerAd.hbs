<!DOCTYPE html>
<html lang="en">
<main class="flex-shrink-0">
    <!-- Page content-->
    <section class="py-5">
        <div class="container px-5">
            <!-- Contact form-->
            <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                <div class="text-center mb-5">
                    <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
                    <h1 class="fw-bolder">Volunteer's Messages</h1>
                    <p class="lead fw-normal text-muted mb-0"></p>
                </div>
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-8 col-xl-12">
                        <div id="grades" class="w-100 table-responsive">
                            <table class="table table-responsive table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">First Name</th>
                                        <th scope="col">Last Name</th>
                                        <th scope="col">Parent First Name</th>
                                        <th scope="col">Parent Last Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Phone</th>
                                        <th scope="col">Birth Date</th>
                                        <th scope="col">Education Level</th>
                                        <th scope="col">School Name</th>
                                        <th scope="col">Emergency Contact</th>
                                        <th scope="col">Emergency Number</th>
                                        <th scope="col">Emergency Relationship</th>
                                        <th scope="col">Question 1</th>
                                        <th scope="col">Question 2</th>
                                        <th scope="col">Question 3</th>
                                        <th scope="col">Agreement</th>
                                        <th scope="col">Created At</th>
                                        <th scope="col">Updated At</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each volunteers}}
                                    <tr>
                                        <td>{{id}}</td>
                                        <td>{{firstName}}</td>
                                        <td>{{lastName}}</td>
                                        <td>{{parentFirstName}}</td>
                                        <td>{{parentLastName}}</td>
                                        <td>{{email}}</td>
                                        <td>{{phone}}</td>
                                        <td>{{birthDate}}</td>
                                        <td>{{educationLevel}}</td>
                                        <td>{{schoolName}}</td>
                                        <td>{{emergency}}</td>
                                        <td>{{emergencyNumber}}</td>
                                        <td>{{emergencyRelated}}</td>
                                        <td>{{question1}}</td>
                                        <td>{{question2}}</td>
                                        <td>{{question3}}</td>
                                        <td>{{#if checkbox}}Yes{{else}}No{{/if}}</td>
                                        <td>{{createdAt}}</td>
                                        <td>{{updatedAt}}</td>
                                        <td>
                                            <button onclick="deleteMessage('{{id}}')" class="btn btn-danger btn-lg w-100">Delete</button>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            <div class="form-floating mb-3 mt-3">
                                <button class="btn btn-primary btn-lg w-100" id="comeBackButton">Admin Panel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
</body>
</html>

<script>
    function deleteMessage(id) {
        fetch('/volunteerAd/' + id, {
            method: 'DELETE'
        })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    console.error('Error deleting grade:', response.statusText);
                }
            })
            .catch(error => {
                console.error('Network error while deleting grade:', error);
            });
    }

    const comeBackButton = document.getElementById("comeBackButton");

    comeBackButton.addEventListener("click", function () {
        window.location.href = "/adminPanel";
    });

</script>
